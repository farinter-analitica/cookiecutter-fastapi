# Configuración de la Aplicación
DEBUG=true
APP_ENV=dev
APP_PORT=8000
SECRET_KEY=your-secret-key-change-in-production

{% if cookiecutter.use_database == "yes" -%}
# Base de Datos
{% if cookiecutter.database_type == "postgresql" -%}
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{{cookiecutter.project_slug}}
{% elif cookiecutter.database_type == "sqlserver" -%}
DATABASE_URL=mssql+pyodbc://sa:YourPassword123@localhost:1433/{{cookiecutter.project_slug}}?driver=ODBC+Driver+17+for+SQL+Server
{% else -%}
DATABASE_URL=sqlite:///./{{cookiecutter.project_slug}}.db
{% endif %}
MAX_CONNECTIONS_COUNT=10
MIN_CONNECTIONS_COUNT=10
{% endif %}

{% if cookiecutter.project_type in ["ml_api", "ai_rag_api"] -%}
# Modelo ML
MODEL_PATH={{cookiecutter.machine_learn_model_path}}
MODEL_NAME={{cookiecutter.machine_learn_model_name}}
INPUT_EXAMPLE={{cookiecutter.input_example_path}}
MEMOIZATION_FLAG=true
{% endif %}

{% if cookiecutter.use_ai_services == "yes" -%}
# Servicios de IA
{% if cookiecutter.ai_provider == "openai" -%}
OPENAI_API_KEY=your-openai-api-key
DEFAULT_MODEL_CHAT=gpt-4o-mini
DEFAULT_MODEL_EMB=text-embedding-3-small
{% elif cookiecutter.ai_provider == "gemini" -%}
GEMINI_API_KEY=your-gemini-api-key
DEFAULT_MODEL_CHAT=gemini-1.5-flash
DEFAULT_MODEL_EMB=text-embedding-004
{% elif cookiecutter.ai_provider == "huggingface" -%}
HUGGINGFACE_API_KEY=your-huggingface-api-key
DEFAULT_MODEL=meta-llama/Llama-2-7b-hf
{% endif %}
{% endif %}

{% if cookiecutter.use_redis == "yes" -%}
# Redis
REDIS_URL=redis://localhost:6379/0
{% endif %}

{% if cookiecutter.use_workers == "yes" -%}
# Workers
{% if cookiecutter.worker_type == "celery" -%}
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
{% elif cookiecutter.worker_type == "rq" -%}
RQ_REDIS_URL=redis://localhost:6379/0
QUEUE_NAME=default
{% endif %}
{% endif %}

{% if cookiecutter.use_storage == "yes" -%}
# Almacenamiento
{% if cookiecutter.storage_type == "minio" -%}
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET={{cookiecutter.project_slug}}
MINIO_SECURE=false
{% elif cookiecutter.storage_type == "s3" -%}
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET={{cookiecutter.project_slug}}
{% elif cookiecutter.storage_type == "local" -%}
UPLOAD_DIR=./uploads
{% endif %}
{% endif %}

# CORS
CORS_ORIGINS=*
